{
  "name": "calendar-notifire",
  "version": "0.0.1",
  "description": "In future this will be a package to notifi channels like a telegram-bot in case of calendar events",
  "main": "index.ts",
  "scripts": {
    "test:watch": "jest --watchAll",
    "test": "jest",
    "test:unit": "jest /unit/",
    "test:integration": "jest /integration/",
    "cover:watch": "jest --coverage --watchAll",
    "cover": "jest --coverage",
    "cover:unit": "jest --coverage /unit/",
    "cover:integration": "jest --coverage /integration/",
    "build": "pretty-quick && npm run check && rimraf ./build && tsc -p ./tsconfig.build.json",
    "build:check": "pretty-quick && npm run check && tsc -p ./tsconfig.json --noEmit",
    "start:dev": "nodemon",
    "start": "npm run build && node build/index.js",
    "fences": "gf -p tsconfig.build.json",
    "lint": "eslint -c .eslintrc.js --ext .ts .",
    "check": "npm run fences && npm run lint",
    "pretty": "pretty-quick",
    "precommit": "pretty-quick --staged && lint-staged && npm run fences",
    "prepush": "npm run build:check && npm run cover"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deeKay93/calendar-notifire.git"
  },
  "keywords": [
    "Calendar",
    "Notification",
    "Telegram",
    "Events"
  ],
  "author": "daniel.knecht@live.de",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/deeKay93/calendar-notifire/issues"
  },
  "homepage": "https://github.com/deeKay93/calendar-notifire#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "cron": "^1.8.2",
    "ical-expander": "^3.0.0",
    "log4js": "^6.2.1",
    "telegraf": "^3.38.0"
  },
  "devDependencies": {
    "@types/cron": "^1.7.2",
    "@types/jest": "^24.9.1",
    "@types/node": "^13.13.6",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "good-fences": "^0.9.1",
    "husky": "^4.2.5",
    "jest": "^25.5.1",
    "lint-staged": "^9.5.0",
    "mockdate": "^2.0.5",
    "nock": "^11.9.1",
    "nodemon": "^2.0.4",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint -c .eslintrc.js --ext .ts"
    ]
  }
}
