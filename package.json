{
  "name": "calendar-notifire",
  "version": "0.0.1",
  "description": "In future this will be a package to notifi channels like a telegram-bot in case of calendar events",
  "main": "index.ts",
  "scripts": {
    "test": "echo \"To be done\"\"",
    "build": "npm run check && rimraf ./build && tsc",
    "start:dev": "nodemon",
    "start": "npm run build && node build/index.js",
    "check": "./node_modules/.bin/tslint --project \".\"",
    "precommit": "pretty-quick --staged && lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deeKay93/calendar-notifire.git"
  },
  "keywords": [
    "Calendar",
    "Notification",
    "Telegram",
    "Events"
  ],
  "author": "daniel.knecht@live.de",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/deeKay93/calendar-notifire/issues"
  },
  "homepage": "https://github.com/deeKay93/calendar-notifire#readme",
  "devDependencies": {
    "@types/node": "^13.1.6",
    "husky": "^4.0.4",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run check"
    ]
  }
}
